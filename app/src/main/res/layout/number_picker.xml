        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        android:contentDescription="0"
        android:src="@drawable/number_0"
        android:tag="0"
        tools:ignore="HardcodedText" />

